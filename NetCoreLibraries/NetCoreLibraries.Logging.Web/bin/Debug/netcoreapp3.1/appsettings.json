{

  // Uygulama Development ortamında çalışırsa  "appsettings.Development.json" içindeki log ayarı geçerlidir. 
  // "appsettings.Development.json" dosyası olmayacağı için Production ortamında ise "appsettings.json" içindeki log ayarı geçerlidir."

  "Logging": {
    "LogLevel": {
      "Default": "Trace", // Default olarak Information ve üzerin olan loglama seviyelerini göster demektir.
      "Microsoft": "Information", //  Information ve üzerin olan loglama seviyelerini göster demektir.
      "Microsoft.Hosting.Lifetime": "Information" //  Information ve üzerin olan göster seviyelerini yaz demektir.
    }
  },
  "AllowedHosts": "*"
}
